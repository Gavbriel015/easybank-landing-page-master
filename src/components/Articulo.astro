---
const { title, image, author , text } = Astro.props;

---

<div class="px-6">
    <img class="w-full md:max-w-[250px] rounded-lg" src={image} alt="">
    <div class="md:px-2 px-10 flex flex-col gap-2 mt-6 justify-center md:max-w-[300px]">
        <span class="text-xs text-gray-400">{author}</span>
        <h2 class="text-lg">{title}</h2>
        <p class="text-sm text-gray-400 mb-4">{text}</p>
    </div>
</div>